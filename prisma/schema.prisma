// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HeroContent {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("hero_content")
}

model TeamMember {
  id        String   @id @default(cuid())
  name      String
  position  String
  image     String
  bio       String
  expertise String[] // Array of strings
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("team_members")
}

model CompanySettings {
  id          String   @id @default(cuid())
  name        String
  tagline     String
  description String
  phone       String
  email       String
  address     String
  whatsapp    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("company_settings")
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  company   String?
  service   String?
  message   String
  status    String   @default("new") // new, contacted, in-progress, completed
  priority  String   @default("medium") // low, medium, high
  source    String   @default("website") // website, whatsapp, email, phone, referral
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

model Portfolio {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String   // landscape, building, perizinan, pengujian, studi, penyelidikan-tanah
  subcategory String?
  client      String
  year        String
  location    String?
  image       String
  featured    Boolean  @default(false)
  status      String   @default("completed") // completed, ongoing, planned
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("portfolios")
}

model Analytics {
  id        String   @id @default(cuid())
  type      String   // page_view, contact_form, portfolio_view, service_inquiry
  page      String?
  data      Json?
  userAgent String?
  ip        String?
  createdAt DateTime @default(now())

  @@map("analytics")
}